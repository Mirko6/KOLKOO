{
    "manifest_version": 2,
    "name": "Temper",
    "version": "1.0.0",
    "description": "Protect the people around you from your angry messages",
    "short_name": "Temper",
    "permissions": ["activeTab", "<all_urls>"],
    "icons":
    {
        "16": "icons/Temper16.png",
        "48": "icons/Temper48.png",
        "128": "icons/Temper128.png"

    },
    "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"] 
    }]


}
